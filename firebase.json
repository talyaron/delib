{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/subApps/mass-names{,/**}",
        "destination": "/subApps/mass-names/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
      
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}